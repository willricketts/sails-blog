<h1>Edit Post</h1>

<form action="/edit/<%= post.slug %>" method="post" id="editForm">
  <label>Title</label>
  <input type="text" name="title" value="<%= post.title %>">
  <label>Content</label>
  <textarea name="content" form="editForm"><%= post.content %></textarea>
  <input type="submit">
</form>